<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.mds.network.firstapp.MainActivity">


    <Button
        android:id="@+id/a1_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A1 call"
        android:onClick="a1_call"/>
    <Button
        android:id="@+id/a2_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A2 call"
        android:onClick="a2_call"/>
    <Button
        android:id="@+id/a3_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A3 call"
        android:onClick="a3_call"/>



</LinearLayout>
